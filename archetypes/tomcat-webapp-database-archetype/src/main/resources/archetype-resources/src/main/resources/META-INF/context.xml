    <Resource name="jdbc/${artifactId}DB" 
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="20" 
              maxIdle="5"
              maxWaitMillis="10000"
              username="devuser" 
              password="devpass123"
              driverClassName="org.postgresql.Driver"
              url="jdbc:postgresql://localhost:15432/devdb"/>
#elseif( $dbType == "mariadb" )
    <Resource name="jdbc/${artifactId}DB" 
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="20" 
              maxIdle="5"
              maxWaitMillis="10000"
